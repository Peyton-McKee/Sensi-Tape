// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(uuid())
  firstName String
  lastName  String
  email     String @unique
  data      Data[]
}

model DataType {
  name String @id @unique
  data Data[]
}

model Data {
  id           String   @id @default(uuid())
  dataTypeName String
  dataType     DataType @relation(fields: [dataTypeName], references: [name])
  userId       String
  user         User     @relation(fields: [userId], references: [id])
}

enum Tag {
  RELAXATION
  FLEXIBILITY
  DISCOMFORT_RESOLUTION
  STRENGTH
  PAIN_RELIEF
  MOBILITY
  STABILITY
  BALANCE
  POSTURE
}

model Exercise {
  id   String @id @default(uuid())
  name String
  tags Tag[]
  link String
}
