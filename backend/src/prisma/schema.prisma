// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ActivityLevel {
  SEDENTARY
  LIGHTLY_ACTIVE
  MODERATELY_ACTIVE
  VERY_ACTIVE
  EXTREMELY_ACTIVE
}

model User {
  id        String @id @default(uuid())
  firstName String
  lastName  String
  email     String @unique

  // relations
  data         Data[]
  activities   Activity[]
  currentTags  Tag[]
  userSettings UserSettings?
}

model UserSettings {
  id            String        @id @default(uuid())
  userId        String        @unique
  user          User          @relation(fields: [userId], references: [id])
  activityLevel ActivityLevel
  gender        String
  age           Int
  height        Int // in inches
  weight        Int // in pounds
}

model DataType {
  name String @id @unique
  data Data[]
}

model Data {
  id           String   @id @default(uuid())
  dataTypeName String
  dataType     DataType @relation(fields: [dataTypeName], references: [name])
  value        Int
  userId       String
  user         User     @relation(fields: [userId], references: [id])
}

enum ActivityType {
  STRETCHING
  STRENGTH_TRAINING
  CARDIO
  YOGA
  PILATES
  TAI_CHI
  MEDITATION
  DANCE
  WALKING
  RUNNING
  CYCLING
  SWIMMING
  HIKING
  CLIMBING
  SKIING
  SNOWBOARDING
  SKATING
  ROWING
  KAYAKING
  CANOEING
  SURFING
  PADDLEBOARDING
  MARTIAL_ARTS
  BOXING
  GYMNASTICS
  CALISTHENICS
  CROSSFIT
  BARRE
  OTHER
}

model Activity {
  id           String       @id @default(uuid())
  name         String
  tags         Tag[]
  time         Int
  activityType ActivityType
  duration     Int
  feet        Int
  userId       String
  user         User         @relation(fields: [userId], references: [id])
}

enum Tag {
  RELAXATION
  FLEXIBILITY
  DISCOMFORT_RESOLUTION
  STRENGTH
  PAIN_RELIEF
  MOBILITY
  STABILITY
  BALANCE
  POSTURE
}

model Recommendation {
  id   String @id @default(uuid())
  name String
  tags Tag[]
  link String
}
